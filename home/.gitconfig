[user]
  name = Nick Bugaiov
  email = nick@bugaiov.com

[github]
  user = bugaiov

[alias]
  br = branch
  cb = "!sh -c 'git branch $1 && git ch $1' -"
  ctb = "!sh -c 'git cb topics/$1' -"

  ci = commit
  ch = checkout
  fc = commit -am 'Initial commit.'
  d = diff
  st = status --short
  ss = status -s

  graph = log --graph
  last = log -n 10
  commits = "!sh -c 'git log $1 --oneline | cut -d\" \" -f 1 | tr \"\n\" \" \"'"
  url = !git remote -v|sed "'s|.*git[:@]\\(.*\\).git.*|http://\\1|;s|m:|m/|'"|uniq|xargs open
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
  discard = checkout -- .
  rmtag = "!sh -c 'git tag -d $1; git push origin :refs/tags/$1'"
  pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1; } ; f"

[push]
  default = simple

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "status"]
  added = green
  changed = red bold
  untracked = magenta bold

[color "branch"]
  remote = yellow

[core]
  editor = subl
  excludesfile = ~/.gitignore
  pager = less -r

[format]
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset
  graph = true

[rebase]
  autosquash = true

[web]
  browser = open

[advice]
  statusHints = false

[log]
  abbrevCommit = true

[mergetool]
	keepBackup = false

[ghi]
	token = !security find-internet-password -a yungb -s github.com -l 'ghi token' -w

[pull]
	rebase = true
